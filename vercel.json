{
  "builds": [
    {
      "src": "*.py",
      "use": "@vercel/python"
    },
    {
      "src": "output/**",
      "use": "@vercel/static"
    },
    {
      "src": "scripts/**",
      "use": "@vercel/static"
    },
    {
      "src": "data/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server_enhanced.py"
    },
    {
      "src": "/(.*)",
      "dest": "output/$1"
    },
    {
      "src": "/",
      "dest": "output/frequency_chapters.html"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  },
  "buildCommand": "pip install -r requirements.txt && python scripts/build_master_db.py && python scripts/generate_char_data.py && python scripts/generate_example_words_v3.py",
  "outputDirectory": "output"
}